{
  "extends": "expo/tsconfig.base",
  "module": "ESNext",
  "moduleResolution": "Node",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
